{
  "name": "ai-reply-agent",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start": "node src/server.js",
    "start-all": "./start-all.sh",
    "dev": "nodemon src/server.js",
    "bot": "node bot-scraper.js",
    "bot-once": "HEADLESS=false RUN_CONTINUOUSLY=false node bot-scraper.js",
    "bot-watch": "HEADLESS=false RUN_CONTINUOUSLY=true RUN_INTERVAL=10 node bot-scraper.js",
    "scraper": "node scraper-service.js",
    "scraper-once": "HEADLESS=false RUN_CONTINUOUSLY=false node scraper-service.js",
    "scraper-watch": "RUN_CONTINUOUSLY=true node scraper-service.js",
    "reply": "node reply-service.js",
    "reply-once": "HEADLESS=false RUN_CONTINUOUSLY=false node reply-service.js",
    "reply-watch": "RUN_CONTINUOUSLY=true node reply-service.js",
    "reply-verbose": "VERBOSE_LOGGING=true node reply-service.js",
    "test-reply": "node test-reply-fix.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC",
  "description": "AI-powered Twitter bot with manual review interface",
  "dependencies": {
    "@playwright/test": "^1.49.1",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "openai": "^5.1.0",
    "playwright": "^1.49.1",
    "puppeteer": "^24.10.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/node": "^22.15.29",
    "nodemon": "^3.0.2"
  }
}
